{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
        },
        "types": [
            "vite/client",
            "dom-speech-recognition"
        ],
        "target": "ESNext",
        "module": "es2020",
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules",
        "public",
        "**/examples/**.vue",
        "**/examples/_**"
    ],
    "include": [
        "resources/js/**/*",
        "resources/js/*.d.ts"
    ],
    "noImplicitAny": false,
}
